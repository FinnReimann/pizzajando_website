<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="css/modals.css" />
    <link rel="stylesheet" type="text/css" href="css/warenkorb.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <title>Accountdetails</title>
  </head>
  <body>
    <form action="/startseite" class="button" method="post">
      <button>PIZZAJANDO</button>
    </form>
    <br />
    <form action="/speisekarte" class="button" method="post">
      <button>Speisekarte</button>
    </form>
    <br />
    <div class="cart">
      <i class="material-icons" id="warenkorb_open">shopping_cart</i>
      <div>
        <span class="cart_items">0</span>
      </div>
    </div>
    <br />
    <i class="material-icons" id="mein_account_open"> dehaze </i>
    <br />
    <div class="warenkorb_container" id="warenkorb_container">
      <div class="warenkorb" id="warenkorb">
        <h1>Warenkorb</h1>
        <div class="product_container">
          <div class="product_header">
            <h5 class="product_title">PRODUKT</h5>
            <h5 class="price">PREIS</h5>
            <h5 class="quantity">QUANTITY</h5>
            <h5 class="total">TOTAL</h5>
          </div>
          <div class="products"></div>
        </div>
        <br />
        <i class="material-icons" id="warenkorb_close">close</i>
      </div>
    </div>
    <div class="mein_account_container" id="mein_account_container">
      <div class="mein_account" id="mein_account">
        <% if(session){ %>
        <h1>MeinAccount</h1>
        <button class="meine_bestellungen" id="meine_bestellungen">
          Meine Bestellungen
        </button>
        <form action="/accountdetails" class="button" method="post">
          <button>Accountdetails</button>
        </form>
        <form action="/logout" class="button" method="post">
          <button class="logout" value="logout">Ausloggen</button>
        </form>
        <% } else { %>
        <h1>Login</h1>
        <form
          action="/login"
          class="login_button"
          id="login_button"
          method="post"
        >
          <label for="login_email">Email:</label><br />
          <input type="text" name="login_email" id="login_email" /><br />
          <label for="login_password">Passwort:</label><br />
          <input
            type="password"
            name="login_password"
            id="login_password"
          /><br /><br />
          <input type="submit" value="Login" />
        </form>
        <p>
          Noch nicht Registriert?<br />
          <button class="register_open" id="register_open">
            Jetzt Registrieren!
          </button>
        </p>
        <% } %>
        <i class="material-icons" id="mein_account_close">close</i>
      </div>
    </div>
    <form action="/update_user" class="button" method="post">
      <p>Persönliche Daten</p>
      <label for="update_email">E-Mail:</label><br />
      <input
        type="email"
        id="update_email"
        name="update_email"
        value="<%= data[0].email %>"
      /><br />
      <label for="update_firstname">Vorname:</label><br />
      <input
        type="text"
        id="update_firstname"
        name="update_firstname"
        value="<%= data[0].firstname %>"
      /><br />
      <label for="update_lastname">Nachname:</label><br />
      <input
        type="text"
        id="update_lastname"
        name="update_lastname"
        value="<%= data[0].lastname %>"
      /><br />
      <p>Adresse</p>
      <label for="update_adress">Straße, Hausnummer:</label><br />
      <input
        type="text"
        id="update_adress"
        name="update_adress"
        value="<%= data[0].adress %>"
      /><br />
      <label for="update_postcode">PLZ, Stadt</label><br />
      <input
        type="text"
        id="update_postcode"
        name="update_postcode"
        value="<%= data[0].postcode %>"
      /><br /><br />
      <input type="submit" value="Kontaktinformationen anpassen" />
    </form>
    <form action="/update_password" class="button" method="post">
      <p>Passwort</p>
      <label for="update_password">Neues Passwort:</label><br />
      <input
        type="password"
        id="update_password"
        name="update_password"
      /><br />
      <label for="update_password_repeat">Wiederholen:</label><br />
      <input
        type="password"
        id="update_password_repeat"
        name="update_password_repeat"
      /><br /><br />
      <input type="submit" value="Passwort ändern" />
    </form>
    <form action="/user_delete" class="button" method="post">
      <label for="delete_email">Email:</label><br />
      <input type="email" class="delete_email" id="delete_email" /><br />
      <label for="delete_password">Passwort:</label><br />
      <input
        type="password"
        class="delete_password"
        id="delete_password"
      /><br />
      <label for="delete_password_repeat">Passwort:</label><br />
      <input
        type="password"
        class="delete_password_repeat"
        id="delete_password_repeat"
      /><br /><br />
      <input type="submit" value="Löschen" />
    </form>
    <p><%= message %></p>
    <% for(var i = 0; i < pizzen.length; i++){ %>
    <div class="pizzen_container" id="pizzen_container">
      <div class="pizzen" id="pizzen">
        <h1 class="pizzen_name"><%= pizzen[i].name %></h1>
        <p class="pizzen_preis"><%= pizzen[i].price %></p>
        <p class="pizzen_zutaten"><%= pizzen[i].ingredients %></p>
      </div>
    </div>
    <% } %> <% for(var i = 0; i < drinks.length; i++){ %>
    <div class="drinks_container" id="drinks_container">
      <div class="drinks" id="drinks">
        <h1 class="drinks_name"><%= drinks[i].name %></h1>
        <p class="drinks_preis"><%= drinks[i].price %></p>
      </div>
    </div>
    <% } %>
    <script src="javascript/modals.js"></script>
    <script src="javascript/warenkorb.js"></script>
  </body>
</html>
