<div class="mein_account_container" id="mein_account_container">
  <div class="mein_account" id="mein_account">
    <% if(session){ %>
    <h1>MeinAccount</h1>
    <button class="meine_bestellungen" id="meine_bestellungen">
      Meine Bestellungen</button
    ><br /><br />
    <form action="/accountdetails" class="button" method="post">
      <button>Accountdetails</button>
    </form>
    <br />
    <form action="/logout" class="button" method="post">
      <button class="logout" value="logout">Ausloggen</button>
    </form>
    <br />
    <% } else { %>
    <h1>Login</h1>
    <form action="/login" class="login_button" id="login_button" method="post">
      <label for="login_email">Email:</label><br />
      <input type="text" name="login_email" id="login_email" /><br />
      <label for="login_password">Passwort:</label><br />
      <input
        type="password"
        name="login_password"
        id="login_password"
      /><br /><br />
      <input type="submit" value="Login" />
    </form>
    <p>
      Noch nicht Registriert?<br />
      <button class="register_open" id="register_open">
        Jetzt Registrieren!
      </button>
    </p>
    <% } %>
    <i class="material-icons" id="mein_account_close">close</i>
  </div>
</div>
<div class="register_container" id="register_container">
  <div class="register" id="register">
    <h1>Registrierung</h1>
    <form action="/user_register" id="register_button" method="post">
      <p>Persönliche Daten</p>
      <label for="register_email">E-Mail Adresse:</label><br />
      <input type="email" name="register_email" id="register_email" /><br />
      <label for="register_firstname">Vorname:</label><br />
      <input
        type="text"
        name="register_firstname"
        id="register_firstname"
      /><br />
      <label for="register_lastname">Nachname:</label><br />
      <input
        type="text"
        name="register_lastname"
        id="register_lastname"
      /><br />
      <p>Adresse</p>
      <label for="register_adress">Straße, Hausnummer:</label><br />
      <input type="text" name="register_adress" id="register_adress" /><br />
      <label for="register_postcode">PLZ, Stadt</label><br />
      <input
        type="text"
        name="register_postcode"
        id="register_postcode"
      /><br />
      <p>Passwort</p>
      <label for="register_password">Passwort:</label><br />
      <input
        type="password"
        name="register_password"
        id="register_password"
      /><br />
      <label for="register_password_repeat">Wiederholen:</label><br />
      <input
        type="password"
        name="register_password_repeat"
        id="register_password_repeat"
      /><br /><br />
      <input type="submit" value="Registrieren" />
    </form>
    <br />
    <i class="material-icons" id="register_close">close</i>
  </div>
</div>
