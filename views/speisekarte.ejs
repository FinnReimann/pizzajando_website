    <% for(var i = 0; i < drinks.length; i++){ %>
    <button
      class="<%= drinks[i].name %>_open"
      name="<%= drinks[i].name %>_open"
    >
      <%= drinks[i].name %>
    </button>
    <% } %>
    <script src="javascript/modals.js"></script>
  </body>
</html>
